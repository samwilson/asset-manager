{% extends "base" %}

{% block content %}
<form action="{{url('tags')}}" method="post">
    {{csrf_field()}}

    <ol class="row">
        {% for tag in tags %}
            <li class="col-md-3">
                <input type="checkbox" name="tags[]" value="{{tag.id}}" id="tag-{{tag.id}}" />
                <label for="tag-{{tag.id}}">{{tag.name}}</label>
            </li>
        {% endfor %}
    </ol>

    <p>
        {{trans('tags.with-selected')}}
        <input type="submit" name="rename" value="{{trans('tags.rename')}}" class="btn btn-default" />
        <input type="submit" name="merge" value="{{trans('tags.merge')}}" class="btn btn-default" />
        <input type="submit" name="delete" value="{{trans('tags.delete')}}" class="btn btn-default" />
    </p>

</form>
{% endblock %}
