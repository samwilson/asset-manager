{% extends "base.twig" %}

{% block content %}

<form action="{{url('/assets/import')}}" method="post" enctype="multipart/form-data">
    <input type="hidden" name="_token" value="{{csrf_token()}}">
    <fieldset><legend>CSV file</legend>
        <div class="">
            <div class="">
                <p>Your CSV should have the following headers (in any order):</p>
                <table>
                    <tr>
                        <th>Identifier</th>
                        <th>Tags</th>
                        <th>Country</th>
                        <th>State</th>
                        <th>Suburb</th>
                        <th>Street address</th>
                        <th>Location description</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Comments</th>
                    </tr>
                    <tr>
                        <td>The only <em>required</em> header</td>
                        <td>Comma-separated</td>
                        <td>Only used if State is also given</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>
            </div>
            <div class="">
                <label>
                    Select CSV file:
                    <input type="file" name="file" class="secondary button" required />
                </label>
            </div>
        </div>
    </fieldset>
    <fieldset><legend>Metadata</legend>
        <p>
            <label>
                Tag imported assets with:
                <input type="text" name="tags" class="tagit" /></label>
        </p>
    </fieldset>
    <p>
        <input type="submit" value="Import" class="button" />
        <a href="{{url('/assets')}}" class="secondary button" title="Return to Asset search">Cancel</a>
    </p>
</form>

{% endblock %}
