<?xml version="1.0"?>
<ruleset name="AssetManager">
    <description>Sniffs for the coding standards of AssetManager</description>

    <!--
      About this file:
      https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml
    -->

    <rule ref="PSR2" />
    <file>./</file>
    <exclude-pattern>./storage/*</exclude-pattern>
    <exclude-pattern>./vendor/*</exclude-pattern>
    <exclude-pattern>./modules/*</exclude-pattern>
    <exclude-pattern>./bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>./docs/_build/*</exclude-pattern>
    <exclude-pattern>./public/components/*</exclude-pattern>
    <exclude-pattern>./public/leaflet/*</exclude-pattern>
    <exclude-pattern>./public/js/tag-it.min.js</exclude-pattern>
    <exclude-pattern>./public/css/jquery.tagit.css</exclude-pattern>
    <exclude-pattern>./public/css/jquery.mobile.min.css</exclude-pattern>
    <exclude-pattern>./public/js/jquery.mobile.min.js</exclude-pattern>

    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <exclude-pattern>./bootstrap/autoload.php</exclude-pattern>
    </rule>
</ruleset>
